<% include ../partials/header %>
    <title>Add New Campground</title>
<% include ../partials/nav %>
    
    <div class="container">
        <div class="row">
            <h1 class="text-center">Create a New Campground</h1>
            
            <div id="addCamp">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" placeholder="Campground Name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="url" name="campground[image]" placeholder="Image URL" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" onchange="setTwoNumberDecimal()" name="campground[price]" min="0.01" step="0.01" placeholder="Price per night" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[description]" placeholder="Describe the campground here!" required>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add New Campground!">
                    </div>
                </form>
                
                <a href="/campgrounds">Back to Campgrounds Page</a>
            </div>
        </div>
    </div>
    
    <script src="/scripts/setTwoNumberDecimal.js"></script>
    
<% include ../partials/footer %>