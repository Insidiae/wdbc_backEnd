<% include ../partials/header %>
    <title>Edit Comment</title>
<% include ../partials/nav %>
    
    <div class="container">
        <div class="row">
            <h1 class="text-center">Edit Comment</h1>
            
            <div id="addCamp">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Comment" value="<%= comment.text %>" required>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Edit Comment">
                    </div>
                </form>
                
                <a href="/campgrounds/<%= campground_id %>">Back to Campground</a>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>