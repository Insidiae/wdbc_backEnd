<% include partials/header %>
    
    <div class="container">
        <div class="row">
            <h1 class="text-center">Add New Campground</h1>
            
            <div id="addCamp">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Campground Name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="url" name="image" placeholder="Image URL" required>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add New Campground!">
                    </div>
                </form>
                
                <a href="/campgrounds">Back to Campgrounds Page</a>
            </div>
        </div>
    </div>
    
<% include partials/footer %>