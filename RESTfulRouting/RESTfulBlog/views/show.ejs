<% include partials/header %>
    <title><%= blog.title %></title>
<% include partials/nav %>
    
    <div class="ui main text container">
        <div class="ui huge header"><%= blog.title %></div>
        <div class="ui top attached segment">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image %>">
                <div class="content">
                    <p>Posted <%= blog.created.toDateString() %></p>
                </div>
                <div class="description">
                    <p><%- blog.body %></p>
                </div>
                <a href="/blogs/<%= blog.id %>/edit" class="ui animated fade green button">
                    <span class="visible content">Edit Post</span>
                    <span class="hidden content">
                        <i class="write icon"></i>
                    </span>
                </a>
                <form id="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <div role="button" class="ui vertical animated red button" onclick="document.querySelector('#deleteForm').submit()">
                        <div class="visible content">DELET THIS</div>
                        <div class="hidden content">
                            <i class="remove icon"></i>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
<% include partials/footer %>