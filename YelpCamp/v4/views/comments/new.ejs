<% include ../partials/header %>
    <title>Add New Comment to <%= campground.name %></title>
<% include ../partials/nav %>
    
    <div class="container">
        <div class="row">
            <h1 class="text-center">Add New Comment to <%= campground.name %></h1>
            
            <div id="addCamp">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Comment" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="Author" required>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add New Comment!">
                    </div>
                </form>
                
                <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>